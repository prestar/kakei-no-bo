<% @monthlydata.each do |monthlydatum| %>
  <tr>
    <td><%= monthlydatum.date %></td>
    <td><%= monthlydatum.item.name %></td>
    <td><%= monthlydatum.value %></td>
    <td><%= link_to 'Show', monthlydatum %></td>
    <td><%= link_to 'Edit', edit_monthlydatum_path(monthlydatum) %></td>
    <td><%= link_to 'Destroy', monthlydatum, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

