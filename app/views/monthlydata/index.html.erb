<h1>Listing monthlydata</h1>

<%= link_to 'New Monthlydatum', new_monthlydatum_path %>

<table id>
  <tr>
    <th>月日</th>
    <th>項目</th>
    <th>支出</th>
    <th></th>
    <th></th>
    <th></th>
